<div class="container-fluid background">
    <h1 class="fs-1 text-center fw-bold">Register</h1>
    <div class="d-flex justify-content-center align-items-center container-fluid">
        <form class="form d-flex flex-column justify-content-center align-items-center" id="registerForm" action="http://localhost:3000/api/session/register" method="post">
            <div class="d-flex flex-column text-center container my-2">
                <label class="fw-bold fs-4" for="first_name">First name:</label>
                <input class="input" type="text" name="first_name" required>
            </div>
            <div class="d-flex flex-column text-center container my-2">
                <label class="fw-bold fs-4" for="last_name">Last name:</label>
                <input class="input" type="text" name="last_name" required>
            </div>
            <div class="d-flex flex-column text-center container my-2">
                <label class="fw-bold fs-4" for="email">Email:</label>
                <input class="input" type="text" name="email" required>
            </div>
            <div class="d-flex flex-column text-center container my-2">
                <label class="fw-bold fs-4" for="age">Age:</label>
                <input class="input" type="number" name="age" required>
            </div>
            <div class="d-flex flex-column text-center container my-2">
                <label class="fw-bold fs-4" for="password">Password:</label>
                <input class="input" type="text" name="password" required>
            </div>
            <button class="btn btn-success" type="submit">Register</button>
        </form>
    </div>
</div>



